<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<div id="movies">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Rating</th>
        <th>Release Date</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title %></td>
          <td><%= movie.rating %></td>
          <td><%= movie.release_date %></td>
          <td>
            <%= link_to "Show", movie_path(movie), class: "btn btn-info" %>
            <%= link_to "Edit", edit_movie_path(movie), class: "btn btn-warning" %>
            <%= link_to "Delete", movie_path(movie), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <td colspan="4">Total Movies: <%= @movies.count %></td>
      </tr>
    </tfoot>
  </table>
</div>

<%= link_to "New movie", new_movie_path, class: "btn btn-primary" %>
