
<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th class="<%= highlight_column('title') %>">
        <%= sortable('title', 'Title') %>
      </th>
      <th class="<%= highlight_column('rating') %>">
        <%= sortable('rating', 'Rating') %>
      </th>
      <th class="<%= highlight_column('release_date') %>">
        <%= sortable('release_date', 'Release Date') %>
      </th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
        <td>
          <%= link_to "Show", movie_path(movie), class: "btn btn-info" %>
          <%= link_to "Edit", edit_movie_path(movie), class: "btn btn-warning" %>
          <%= link_to "Delete", movie_path(movie), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


